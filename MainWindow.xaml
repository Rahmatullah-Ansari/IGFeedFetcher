<Window
    x:Class="FeedFetcher.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FeedFetcher"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:FeedFetcher.Views"
    x:Name="MainWindowContext"
    Title="Instagram"
    Width="800"
    Height="450"
    Closing="WhileClosing"
    Icon="IG.ico"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Window.InputBindings>
        <!--  Ctrl + H key binding  -->
        <KeyBinding
            Key="L"
            Command="{Binding ToggleVisibilityCommand}"
            Modifiers="Control" />
    </Window.InputBindings>
    <Window.Background>
        <ImageBrush ImageSource="/NVidia.jpg" />
    </Window.Background>
    <Grid x:Name="MainGrid">
        <Border
            x:Name="LicenseBorder"
            Width="400"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            BorderBrush="White"
            BorderThickness="2"
            CornerRadius="30,0,30,0">
            <Border.Background>
                <ImageBrush ImageSource="/NVidia.jpg" />
            </Border.Background>
            <StackPanel Margin="10,0" Orientation="Vertical">
                <Image
                    Width="100"
                    Height="100"
                    Margin="0,20"
                    Source="AIBot.png" />
                <Label
                    Margin="10,0,10,0"
                    Content="Enter License Key"
                    FontSize="16"
                    Foreground="White" />
                <Border
                    MinWidth="200"
                    Margin="10,5"
                    Background="White"
                    BorderBrush="White"
                    BorderThickness="2"
                    CornerRadius="5">
                    <TextBox
                        x:Name="LicenseKey"
                        Margin="2"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        BorderBrush="Transparent"
                        BorderThickness="0" />
                </Border>
                <TextBlock
                    x:Name="Status"
                    HorizontalAlignment="Center"
                    FontSize="14"
                    Foreground="Red" />
                <Border
                    MinWidth="200"
                    Margin="10,10,10,20"
                    BorderBrush="SkyBlue"
                    BorderThickness="2"
                    CornerRadius="5">
                    <Button
                        Padding="8"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="Vl"
                        Content="Verify License"
                        Cursor="Hand"
                        Foreground="White" />
                </Border>
            </StackPanel>
        </Border>
        <Grid x:Name="HomeGrid">
            <Grid.Background>
                <ImageBrush ImageSource="/circuit.jpeg" Opacity="0.4" />
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                x:Name="LValid"
                Margin="0,10"
                HorizontalAlignment="Center"
                FontFamily="Arial Narrow"
                FontSize="18"
                FontWeight="DemiBold"
                Foreground="White"
                Text="License Valid Upto : -" />
            <ScrollViewer
                Grid.Row="1"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Expander
                        Grid.Row="0"
                        Margin="10"
                        FontSize="16"
                        Foreground="White"
                        Header="Input"
                        IsExpanded="True">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <Label
                                        VerticalAlignment="Center"
                                        Content="Enter Session"
                                        Foreground="White" />
                                    <Border
                                        MinWidth="200"
                                        MinHeight="40"
                                        MaxWidth="300"
                                        MaxHeight="100"
                                        Margin="10,5"
                                        VerticalAlignment="Center"
                                        CornerRadius="5">
                                        <TextBox
                                            x:Name="SessionTextBox"
                                            Margin="2"
                                            VerticalContentAlignment="Center"
                                            BorderThickness="0"
                                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                                            Text="{Binding CookiesString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            TextWrapping="Wrap" />
                                    </Border>
                                    <Border
                                        Margin="5,0,5,0"
                                        VerticalAlignment="Center"
                                        BorderBrush="White"
                                        BorderThickness="2"
                                        CornerRadius="5"
                                        Cursor="Hand">
                                        <Button
                                            x:Name="SessionButton"
                                            Margin="3"
                                            Padding="20,2"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Command="{Binding AddSession}"
                                            CommandParameter="{Binding ElementName=SessionTextBox}"
                                            Content="Save"
                                            Foreground="White" />
                                    </Border>
                                    <StackPanel Margin="20,10" Orientation="Vertical">
                                        <StackPanel Orientation="Horizontal">
                                            <Label Content="Enter Username" Foreground="White" />
                                            <Border
                                                MinWidth="200"
                                                BorderBrush="White"
                                                BorderThickness="2"
                                                CornerRadius="5">
                                                <TextBox
                                                    Margin="2"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Foreground="White"
                                                    Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                            </Border>
                                        </StackPanel>
                                        <StackPanel Margin="0,10" Orientation="Horizontal">
                                            <Label Content="Enter Password" Foreground="White" />
                                            <Border
                                                MinWidth="200"
                                                BorderBrush="White"
                                                BorderThickness="2"
                                                CornerRadius="5">
                                                <TextBox
                                                    Margin="2"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Foreground="White"
                                                    Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label
                                        VerticalAlignment="Center"
                                        Content="Provide Server API"
                                        Foreground="White" />
                                    <TextBox
                                        x:Name="ProfileTextBox"
                                        MinWidth="200"
                                        MinHeight="30"
                                        MaxHeight="100"
                                        Margin="10,5"
                                        VerticalContentAlignment="Center"
                                        ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                                        Text="{Binding API, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        TextWrapping="Wrap" />
                                    <Border
                                        MinWidth="100"
                                        Margin="5,0,5,0"
                                        VerticalAlignment="Center"
                                        BorderBrush="White"
                                        BorderThickness="2"
                                        CornerRadius="5"
                                        Cursor="Hand">
                                        <Button
                                            x:Name="ProfileButton"
                                            Margin="5"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Command="{Binding SaveProfileAPI}"
                                            Content="Save"
                                            Foreground="White" />
                                    </Border>
                                    <Border
                                        MinWidth="100"
                                        Margin="5,0,5,0"
                                        VerticalAlignment="Center"
                                        BorderBrush="White"
                                        BorderThickness="2"
                                        CornerRadius="5"
                                        Cursor="Hand">
                                        <Button
                                            x:Name="StartButton"
                                            Margin="5"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Command="{Binding StartFetching}"
                                            Content="{Binding ButtonText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Foreground="White" />
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                            <ScrollViewer
                                Grid.Row="1"
                                MinHeight="200"
                                MaxHeight="400"
                                Margin="5,3"
                                HorizontalScrollBarVisibility="Disabled"
                                VerticalScrollBarVisibility="Disabled">
                                <ListView
                                    x:Name="SessionListView"
                                    ItemsSource="{Binding Sessions, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    SelectedItem="{Binding Session, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                    <ListView.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Command="{Binding CopySession}" Header="Copy Session" />
                                            <MenuItem Command="{Binding DeleteSession}" Header="Delete Session" />
                                        </ContextMenu>
                                    </ListView.ContextMenu>
                                    <ListView.View>
                                        <GridView>
                                            <GridView.Columns>
                                                <GridViewColumn DisplayMemberBinding="{Binding Index, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Header=" S.NO " />
                                                <GridViewColumn DisplayMemberBinding="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Header=" Username " />
                                                <GridViewColumn Header=" Session ">
                                                    <GridViewColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <ScrollViewer Width="500" Height="100">
                                                                <TextBlock
                                                                    IsEnabled="True"
                                                                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                                                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                                    Text="{Binding CookieString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                    TextWrapping="WrapWithOverflow" />
                                                            </ScrollViewer>
                                                        </DataTemplate>
                                                    </GridViewColumn.CellTemplate>
                                                </GridViewColumn>
                                                <GridViewColumn DisplayMemberBinding="{Binding Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Header="Status" />
                                            </GridView.Columns>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </ScrollViewer>
                        </Grid>
                    </Expander>
                    <Expander
                        Grid.Row="1"
                        Margin="5,10"
                        FontSize="16"
                        Foreground="White"
                        Header="Instagram Feed"
                        IsExpanded="True">
                        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                            <ListView
                                x:Name="FeedListView"
                                MinHeight="200"
                                MaxHeight="400"
                                Margin="5,10"
                                ItemsSource="{Binding FeedCollections, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="2" />
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <ListView Grid.Column="0" ItemsSource="{Binding Medias, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                <ListView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Image
                                                            Width="70"
                                                            Height="70"
                                                            Source="{Binding MediaUrl}" />
                                                    </DataTemplate>
                                                </ListView.ItemTemplate>
                                            </ListView>
                                            <DockPanel Grid.Column="1" Margin="10,0">
                                                <TextBlock
                                                    DockPanel.Dock="Top"
                                                    Foreground="Blue"
                                                    Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
                                                    <StackPanel Orientation="Vertical">
                                                        <Image
                                                            Width="40"
                                                            Height="40"
                                                            Source="/Like.png" />
                                                        <TextBlock
                                                            Margin="0,10"
                                                            Foreground="Blue"
                                                            Text="{Binding LikeCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                    </StackPanel>
                                                    <StackPanel Margin="10,0" Orientation="Vertical">
                                                        <Image
                                                            Width="40"
                                                            Height="40"
                                                            Source="/comment.png" />
                                                        <TextBlock
                                                            Margin="0,10"
                                                            Foreground="Blue"
                                                            Text="{Binding CommentCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                    </StackPanel>
                                                    <StackPanel Margin="10,0" Orientation="Vertical">
                                                        <Image
                                                            Width="40"
                                                            Height="40"
                                                            Source="/share.png" />
                                                        <TextBlock
                                                            Margin="0,10"
                                                            Foreground="Blue"
                                                            Text="{Binding ShareCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                    </StackPanel>
                                                </StackPanel>
                                            </DockPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </ScrollViewer>
                    </Expander>
                </Grid>
            </ScrollViewer>
            <view:LoggerView
                x:Name="Logger"
                Grid.Row="2"
                MinHeight="200"
                MaxHeight="300"
                Margin="15,10"
                Visibility="Collapsed" />
            <DockPanel Grid.Row="3" Margin="10">
                <TextBlock
                    FontWeight="DemiBold"
                    Foreground="White"
                    Text="&#169; All Rights Reserved 2025" />
                <StackPanel HorizontalAlignment="Right" Orientation="Vertical">
                    <TextBlock
                        FontWeight="DemiBold"
                        Foreground="White"
                        Text="Powered By:" />
                    <TextBlock
                        FontWeight="DemiBold"
                        Foreground="White"
                        Text="@B International Games (AU)" />
                </StackPanel>
            </DockPanel>
        </Grid>
    </Grid>
</Window>
